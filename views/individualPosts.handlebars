<body>
	<div class="jumbotron" id="indexJumboPost">
		<a href="/"><img src="../images/back.png" alt="Back image" class="backimg"></a>
		<a href="/"><img src="../images/home.png" alt="Home image" class="homeimg"></a>
		<!-- <center><p id="profileHead">My Posts</p></center> -->
	</div>

	<div class="container">
		<img src="../images/photo.png" alt="Profile image" class="profileimgInd">
		<p id="name2">Tom</p>
		<p id="date2">{{date}}</p>
		<p id="heading">{{title}}</p>

	<div class="post">
		<p id="myMessage"> {{message}} </p>
		<img src="../images/heart.png" alt="Heart" class="postIcons" id="heart">
		<p id="hugText">Hugs: 7</p>
		<img src="../images/star.png" alt="Star" class="postIcons" id="star">
		<p id="saveText">Save: 5</p>
	</div>

	<div class="replies">
		<p id="reply"> Replies: {{repliesNum}}</p>
		<img src="../images/photo.png" alt="Profile image" class="replyProfile">
		<p id="theirName">{{name}}</p>
		<p id="theirMsg">{{theirMsg}}</p>
		<!-- <input type="text" class="form-control" id="replyM" placeholder="Write a reply..." name="reply"> -->
