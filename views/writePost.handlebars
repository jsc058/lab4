<!doctype html>

<html>
<head>
	<title>Profile</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/pages.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>
	<div class="jumbotron" id="indexJumboPost">
		<a href="/"><img src="../images/back.png" alt="Back image" class="backimg"></a>
		<a href="/"><img src="../images/home.png" alt="Home image" class="homeimg"></a>
		<center><p id="profileHead">Write a Post</p></center>
	</div>

	<div class="container">

		<div class="titleSection">
			<p>Title/Question</p>
			<input type="text" class="form-control" id="titleBox" placeholder="What's on your mind?" name="reply">
		</div>

	<div class="descriptionSection">
		<p>Description</p>
		<!-- <input type="text" class="form-control" id="describeBox" placeholder="Description..." name="reply"> -->
		<textarea name="textarea" id="describeBox" placeholder="Description..."></textarea>
	</div>

	<div class="addSection">
		<p id="add">Add:</p>
		<img src="../images/links.png" alt="Links" class="writeIcons" id="heart">
		<p class="iconText" id="linkText">Link</p>
		<img src="../images/camera.png" alt="Camera" class="writeIcons" id="star">
		<p class="iconText" id="photosText">Photos</p>
		<img src="../images/video.png" alt="Report" class="writeIcons" id="report">
		<p class="iconText" id="videosText">Videos</p>
	</div>

	<div class="categorySection">
		<p>Category:</p>
		<table>
		  <tr>
		    <td><div class="content"><p id="wPostTrend" onclick="select(this.id)">Trending</p></div></td>
		    <td><div class="content2"><p id="wPostRecent" onclick="select(this.id)">Recent</p></div></td>
		  </tr>
		  <tr>
		    <td><div class="content"><p id="wPostWandering" onclick="select(this.id)">Wandering</p></div></td>
		    <td><div class="content2"><p id="wPostSafety" onclick="select(this.id)">Safety</p></div></td>
		  </tr>
			<tr>
				<td><div class="content"><p id="wPostSupport" onclick="select(this.id)">Support</p></div></td>
				<td><div class="content2"><p id="wPostOther" onclick="select(this.id)">Other</p></div></td>
			</tr>
		<table>
	</div>

	<div class="postIt">
		<p id="anonymous">Anonymous</p><img src="../images/off_button.png" alt="on_button" class="anonymous_icon" id="on_butt" onclick="changeButt(this.id)">
		<a href="/individualPosts/My Post"><p id="post">Post</p></a>
	</div>


</div>



	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/write.js"></script>
</body>
</html>
