<body>
	<div class="jumbotron" id="indexJumboPost">
		<a href="/"><img src="../images/back.png" alt="Back image" class="backimg"></a>
		<a href="/"><img src="../images/home.png" alt="Home image" class="homeimg"></a>
		<center><p id="profileHead">Messages</p></center>
	</div>

	<div class="container">
		{{#each messagesList}}
			<div class="projectM" id="{{name}}">
				<a href="messenger/{{name}}" class="thumbnail" id="thumbnailM">
					<img src="{{image}}" class="imgM" id="imgM">
					<p id="nameM">{{name}}</p>
					<p id="timeM">{{time}}</p>
					<!-- <img src="../images/messageNotif.png" class="notif" id={{show}}> -->
					<p class="{{show}}" id="messageM">{{message}}</p>
				</a>
			</div>
		{{/each}}
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
